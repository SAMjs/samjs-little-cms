{
  "name": "samjs-little-cms",
  "description": "A little cms meant for nearly static content.",
  "version": "0.0.2",
  "homepage": "https://github.com/samjs/samjs-little-cms",
  "author": {
    "name": "Paul Pflugradt",
    "email": "paul.pflugradt@gmail.com"
  },
  "engines": {
    "node": "*"
  },
  "main": "server/deploy/index.js",
  "dependencies": {
    "jade": "^1.11.0",
    "jstransformer-marked": "^1.0.1",
    "koa": "^1.1.2",
    "koa-sendfile": "^1.1.1",
    "koa-spa": "^0.1.3",
    "koa-static": "^2.0.0",
    "marked": "^0.3.5",
    "samjs": "^0.2.1",
    "samjs-auth": "^0.2.1",
    "samjs-files": "^0.2.2"
  },
  "devDependencies": {
    "babel-core": "^6.4.0",
    "babel-loader": "^6.2.1",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-runtime": "^5.8.34",
    "coffee-loader": "^0.7.2",
    "coffee-script": "^1.10.0",
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-loader": "^0.4.0",
    "imports-loader": "^0.6.5",
    "jade-loader": "^0.8.0",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "normalize.css": "^3.0.3",
    "parallelshell": "^2.0.0",
    "pkg-json": "0.0.2",
    "rimraf": "^2.5.0",
    "samjs-auth-client": "^0.2.1",
    "samjs-client": "^0.2.1",
    "samjs-files-client": "^0.2.1",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "stylus": "^0.53.0",
    "stylus-loader": "^1.4.3",
    "template-html-loader": "0.0.3",
    "textarea-caret-position": "^0.1.1",
    "url-loader": "^0.5.7",
    "vue": "^1.0.14",
    "vue-hot-reload-api": "^1.2.2",
    "vue-html-loader": "^1.1.0",
    "vue-loader": "^8.0.2",
    "vue-materialize": "^0.0.2",
    "vue-router": "^0.7.8",
    "vue-style-loader": "^1.0.0",
    "webpack": "^1.12.11"
  },
  "keywords": [
    "socket.io",
    "mocha",
    "report",
    "viewer",
    "xunit",
    "browser",
    "live",
    "debug"
  ],
  "readmeFilename": "README.md",
  "scripts": {
    "clean": "rimraf deploy/app deploy/server deploy/app_build",
    "prebuild": "npm run clean",
    "build:server": "coffee --compile --output deploy/server/ server/",
    "build:static": "cp -R resources deploy/ && cp -R app deploy/ && cp package.json .gitignore deploy/ && sed -i 's!app_build$!app_build/*.html!' deploy/.gitignore && cd deploy/ && pkg-json set main server/index.js",
    "build:webpack": "NODE_ENV=production webpack",
    "build": "parallelshell \"npm run build:webpack\" \"npm run build:server\" \"npm run build:static\"",
    "deploy": "npm run build && cd deploy && git add . && git commit -m 'deploy' && git push deploy",
    "install": "NODE_ENV=production npm install",
    "serve": "NODE_ENV=production node deploy/server/index.js",
    "watch": "parallelshell \"npm run watch:webpack\" \"npm run watch:server\"",
    "watch:webpack": "webpack --watch",
    "watch:server": "nodemon --watch server server/index.coffee"
  }
}
